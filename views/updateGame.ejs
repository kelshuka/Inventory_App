<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title> <%= title %> </title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <div class="container">
            <header>
                <div class="headCont">
                    <%- include('headerFooter/header') %>
                </div>
            </header>

            <main class="updateGameMain" id="updateGameMain" aria-labelledby='updateGameMain'>
                <form action="/games/<%= game.id %>/update" method="POST">

                    <% if (locals.errors) { %>
                        <ul class="errorMsg">
                            <% errors.forEach(error => { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                            <% }); %>
                        </ul>
                    <% } %>

                    <label for="name">Name of Game:</label>
                    <input type="text" id="name" name="name" value="<%= game.name %>" required>

                    <label for="imgURL">Image URL:</label>
                    <input type="text" id="imgURL" name="imgURL" value="<%= game.img %>">

                    <label for="description">Describe Game:</label>
                    <input type="text" id="description" name="description" value="<%= game.description %>">

                    <label for="price">Price:</label>
                    <input type="number" id="price" name="prices" value="<%= game.price %>" required>

                    <label for="rating">Rating of Game:</label>
                    <input type="number" id="rating" name="rating" step=".01" value="<%= game.rating %>" required>

                    <label for="publisher">Publisher:</label>
                    <input type="text" id="publisher" name="publisher" value="<%= game.publisher %>" required>

                    <label for="pubDate">Publishing Date:</label>
                    <input type="date" id="pubDate" name="publishingDate" value="<%= game.publishingDate %>" required>

                    <label for="quanti">Quantity in Stock:</label>
                    <input type="number" id="quanti" name="quantity" value="<%= game.quantity %>" required>

                    <label for="genre">Genre:</label>
                    <input type="text" id="genre" name="genre" value="<%= game.genre %>" required>

                    <label for="passWord">Password:</label>
                    <input type="password" id="passWord" name="password" required>


                    <button type="submit">Submit</button>
                </form>
            </main>

            <%- include('headerFooter/footer') %>
        </div>
            
        
    </body>
</html>