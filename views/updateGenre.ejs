<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title> <%= title %> </title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <div class="container">
            <header>
                <div class="headCont">
                    <%- include('headerFooter/header') %>
                </div>
            </header>

            <main class="updateGenreMain" id="updateGenreMain" aria-labelledby='updateGenreMain'>
                <form action="/genres/<%= genre.id %>/update" method="POST">

                    <% if (locals.errors) { %>
                        <ul class="errorMsg">
                            <% errors.forEach(error => { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                            <% }); %>
                        </ul>
                    <% } %>

                    <label for="name">Name of Genre:</label>
                    <input type="text" id="name" name="name" value="<%= genre.name %>" required>

                    <label for="imgURL">Image URL:</label>
                    <input type="text" id="imgURL" name="imgURL" value="<%= genre.img %>">

                    <label for="passWord">Password:</label>
                    <input type="password" id="passWord" name="password" required>


                    <button type="submit">Submit</button>
                </form>
            </main>

            <%- include('headerFooter/footer') %>
        </div>
            
        
    </body>
</html>