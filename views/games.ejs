<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= title %> </title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <div class="container">
            <header>
                <div class="headCont">
                    <%- include('headerFooter/header') %>
                </div>
            </header>

            <main class="gamesMain" id="gamesMain" aria-labelledby='gamesMain'>
                <h1 class="gamesTitle"> <%= title %> </h1>
                <% if (games.length !== 0) {%>
                    <ul>
                        <% games.forEach(game => {%>
                            <li><a href="/games/<%= game.id %>"> <%= game.name %> </a> </li>
                        <% }) %>
                    </ul>
                <%} %>
                <% if (games.length == 0) {%>
                    <section>No games found!</section>
                <%} %>
            </main>

            <%- include('headerFooter/footer') %>
        </div>

       
    </body>
</html>