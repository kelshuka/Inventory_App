<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= title %> </title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <div class="container">
            <header>
                <div class="headCont">
                    <%- include('headerFooter/header') %>
                </div>
            </header>

            <main class="gamesGenre">
                <h1 class="gamesGenreTitle"> <%= title %> </h1>
                <% if (genreGames.length !== 0) {%>
                    <ul>
                        <% genreGames.forEach(gen => {%>
                            <li>
                                <a href="/genres/genreGame/<%= gen.id %>"> <%= gen.name %> </a>

                            </li>
                        <% }) %>
                    </ul>
                <%} %>
                <% if (genreGames.length == 0) {%>
                    <section>No games found here!</section>
                <%} %>

            <%- include('headerFooter/footer') %>
        </div>
       
    </body>
</html>